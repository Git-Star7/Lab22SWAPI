
@{
    ViewData["Title"] = "GetPlanetById";
}

@model Planet

<h1>Star Wars Planet</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Day Length</th>
        <th>Year Length</th>
        <th>Terrain</th>
        <th>Climate</th>
        <th>Population</th>
    </tr>
    <tr>
        <td>@Model.name</td>
        <td>@Model.rotation_period</td>
        <td>@Model.orbital_period</td>
        <td>@Model.terrain</td>
        <td>@Model.climate</td>
        <td>@Model.population</td>
    </tr>
</table>